{
  "manifest_version": 3,
  "name": "Webpage Screenshot Extension",
  "version": "1.0",
  "description": "Capture a screenshot of the current webpage.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "downloads", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icon.png"
    }
  }
}
